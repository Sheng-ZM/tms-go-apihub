{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["name", "steps"],
  "properties": {
    "name": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "private": {
      "type": "string"
    },
    "steps": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name", "command"],
        "properties": {
          "name": {
            "type": "string"
          },
          "command": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "private": {
            "type": "string"
          },
          "resultKey": {
            "type": "string"
          },
		  "args": {
		    "type": "array",
			"items": {
			  "type": "object",
			  "required": ["name", "value"],
			  "properties": {
                "name": {
                "type": "string"
                },
			    "value": {
                "$ref" : "#/baseValueDef"
                }
			  }
			}
		  },
		  "origin": {
		    "type": "array",
			"items": {
			  "type": "object",
			  "required": ["name", "value"],
			  "properties": {
                "name": {
                "type": "string"
                },
			    "value": {
                "$ref" : "#/baseValueDef"
                }
			  }
			}
		  }
        }
      }
    }
  },
  
  "baseValueDef": {
	"type": "object",
	"required": ["from"],
	"properties": {
	  "from": {
		"type": "string",
		"enum": ["origin", "private", "query", "header", "literal", "template", "StepResult", "json", "jsonRaw","env", "func"]
	  },
	  "content": {
		"type": "string"
	  },
	  "json": {
		"type": "object"
	  },
	  "args": {
		"type": "string"
	  }
	},
	"if": {
	  "properties": { "from": { "enum": ["json", "jsonRaw"] } }
	},
	"then": {
	  "required": ["json"]
	},
	"else": {
	  "required": ["content"]
	},
	"additionalProperties" : false
  },
  "additionalProperties" : false
}
