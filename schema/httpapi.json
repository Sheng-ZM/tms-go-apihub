{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["id", "method", "requestContentType"],
  "anyOf": [
    {"required": ["url"]},
    {"required": ["dynamicUrl"]}
  ],
  "properties": {
    "id": {
      "type": "string"
    },
    "url": {
      "type": "string"
    },
    "dynamicUrl": {
      "$ref" : "#/baseValueDef"
    },
    "description": {
      "type": "string"
    },
    "private": {
      "type": "string"
    },
    "method": {
      "type": "string",
      "enum": ["POST", "GET"]
    },
    "requestContentType": {
      "type": "string",
      "enum": ["json", "form", "orgin", "none"]
    },
    "args": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["in", "name", "value"],
        "properties": {
          "in": {
            "type": "string",
            "enum": ["header", "vars", "body", "query"]
          },
          "name": {
            "type": "string"
          },
          "value": {
            "$ref" : "#/baseValueDef"
          }
        }
      }
    },
    "cache": {
      "type": "object",
      "required": ["expire", "format"],
      "properties": {
        "expire": {
          "type": "object",
          "required": ["from", "content"],
          "properties": {
            "from": {
              "type": "string",
              "enum": ["template", "header"]
            },
            "content": {
              "type": "string"
            },
            "json": {
              "type": "object"
            },
            "args": {
              "type": "string"
            }
          }
        },
        "format": {
          "type": "string"
        }
      }
    }
  },
  
  "baseValueDef": {
	"type": "object",
	"required": ["from"],
	"properties": {
	  "from": {
		"type": "string",
		"enum": ["origin", "private", "query", "header", "literal", "template", "StepResult", "json", "jsonRaw","env", "func"]
	  },
	  "content": {
		"type": "string"
	  },
	  "json": {
		"type": "object"
	  },
	  "args": {
		"type": "string"
	  }
	},
	"if": {
	  "properties": { "from": { "enum": ["json", "jsonRaw"] } }
	},
	"then": {
	  "required": ["json"]
	},
	"else": {
	  "required": ["content"]
	}
  }
}
