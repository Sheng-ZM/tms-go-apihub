{
  "name": "_APIGATEWAY_PRE",
  "description": "执行api gateway pre流程",
  "steps": [
    {
      "name": "fillBaseInfo",
      "command": "fillBaseInfo",
      "description": "添加基本信息",
      "args": [
        {
          "name": "user",
          "value": {
            "from": "query",
            "content": "appID"
          }
        },
        {
          "name": "uuid",
          "value": {
            "from": "header",
            "content": "uuid"
          }
        }
      ]
    },
    {
      "name": "check_right",
      "command": "checkRight",
      "description": "查询执行权限",
      "args": [
        {
          "name": "user",
          "value": {
            "from": "query",
            "content": "appID"
          }
        },
        {
          "name": "name",
          "value": {
            "from": "template",
            "content": "{{.base.root}}"
          }
        },
        {
          "name": "type",
          "value": {
            "from": "literal",
            "content": "{{.base.type}}"
          }
        }
      ]
    }
  ]
}
