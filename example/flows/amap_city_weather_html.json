{
  "name": "amap_city_weather",
  "description": "高德地图查询城市的天气",
  "steps": [
    {
      "name": "city_adcode",
      "description": "查询城市的区域码",
      "resultKey": "adcodeResult",
      "api": {
        "id": "amap_district"
      }
    },
    {
      "name": "city_adcode",
      "description": "查询城市的区域码",
      "resultKey": "weatherResult",
      "api": {
        "id": "amap_weather",
        "parameters": [
          {
            "name": "city",
            "from": {
              "from": "StepResult",
              "name": "adcodeResult.data.adcode"
            }
          }
        ]
      }
    },
    {
      "name": "merge_result",
      "description": "合并收到的结果",
      "resultKey": "merged",
      "response": {
        "type": "html",
        "from": {
          "from": "template",
          "name": "<html><head><title>Hello API</title></head><body><p>status:{{.weatherResult.errCode}}</p><p>region:{{.weatherResult.data.region}}</p><p>weather:{{.weatherResult.data.weather}}</p><p>temperature:{{.weatherResult.data.temperature}}</p><p>winddirection:{{.weatherResult.data.winddirection}}</p><p>windpower:{{.weatherResult.data.windpower}}</p><p>humidity:{{.weatherResult.data.humidity}}</p></body></html>",
          "template": {
            "errCode": "{{.weatherResult.errCode}}",
            "data": {
              "region": "{{.weatherResult.data.region}}",
              "weather": "{{.weatherResult.data.weather}}",
              "temperature": "{{.weatherResult.data.temperature}}",
              "winddirection": "{{.weatherResult.data.winddirection}}",
              "windpower": "{{.weatherResult.data.windpower}}",
              "humidity": "{{.weatherResult.data.humidity}}"
            }
          }
        }
      }
    }
  ]
}
