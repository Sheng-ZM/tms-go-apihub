{
  "id": "kdxf_nlp_cws",
  "description": "科大讯飞自然语言处理，文本分词。",
  "url": "https://ltpapi.xfyun.cn/v1/cws",
  "method": "POST",
  "private": "kdxf_keys",
  "requestContentType": "form",
  "parameters": [
    {
      "in": "header",
      "name": "X-Appid",
      "value": {
        "from": "private",
        "content": "appid"
      }
    },
    {
      "in": "header",
      "name": "X-Param",
      "value": {
        "from": "literal",
        "content": "eyJ0eXBlIjoiZGVwZW5kZW50In0="
      }
    },
    {
      "in": "header",
      "name": "X-CurTime",
      "value": {
        "from": "func",
        "content": "utc"
      }
    },
    {
      "in": "vars",
      "name": "apikey",
      "value": {
        "from": "private",
        "content": "apikey"
      }
    },
    {
      "in": "header",
      "name": "X-CheckSum",
      "value": {
        "from": "func",
        "content": "md5",
        "args": "apikey X-CurTime X-Param"
      }
    },
    {
      "in": "body",
      "name": "text",
      "value": {
        "from": "origin",
        "content": "content"
      }
    }
  ],
  "response": {
    "json": {
      "errCode": "{{.code}}",
      "data": {
        "word": [
          "{{range $index,$elem := .data.word}}{{if $index}},{{end}}\"{{.}}\"{{end}}"
        ]
      }
    }
  }
}
